#include <stdio.h>
#include <stdlib.h>

// Function to demonstrate pointers
void pointerDemo() {
    int value = 42;
    int* ptr = &value;

    printf("ðŸ“Œ Pointer Demo:\n");
    printf("Value: %d\n", value);
    printf("Pointer Address: %p\n", (void*)ptr);
    printf("Value through Pointer: %d\n\n", *ptr);
}

// Function to demonstrate 1D Vectors (Arrays)
void vectorDemo() {
    int vector[5] = {10, 20, 30, 40, 50};

    printf("ðŸ“Œ Vector Demo (1D Array):\n");
    for (int i = 0; i < 5; i++) {
        printf("Element %d: %d\n", i, vector[i]);
    }
    printf("\n");
}

// Function to demonstrate 2D Matrices
void matrixDemo() {
    int matrix[2][3] = {
        {1, 2, 3},
        {4, 5, 6}
    };

    printf("ðŸ“Œ Matrix Demo (2D Array):\n");
    for (int i = 0; i < 2; i++) {
        for (int j = 0; j < 3; j++) {
            printf("%d ", matrix[i][j]);
        }
        printf("\n");
    }
    printf("\n");
}

int main() {
    printf("ðŸ§  Welcome to Valhalla - C\n\n");

    pointerDemo();
    vectorDemo();
    matrixDemo();

    return 0;
}
